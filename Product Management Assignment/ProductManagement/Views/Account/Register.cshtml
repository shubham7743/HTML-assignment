@model ProductManagement.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto my-4">
        <div class="card my-5 shadow" style="border-radius:25px;">
            <div class="card-body p-5">
                <section id="loginForm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="card-title text-center">Register Here</h4>
                        <hr class="my-4 mx-5" />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group mt-5">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-4">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-4">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-5">
                            <input type="submit" class="btn text-white btn-block" value="Register" style="background: #007bff;background: linear-gradient(to right, #0062E6, #33AEFF); border-radius: 25px;" />
                        </div>
                        <p class="text-center mt-4">
                            Already a user? @Html.ActionLink("Login here", "Login")
                        </p>
                    }
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
