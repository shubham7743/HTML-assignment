@model ProductManagement.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h3 class="text-center text-light mt-4">Are you sure you want to delete <b>@Model.Name</b> product?</h3>
<div class="text-center">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="col-4 btn btn-danger mt-4 mb-3" style="border-radius: 25px;"/><br/>
            @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "col-4 btn btn-secondary", @style = " border-radius: 25px;" })
        </div>
    }
</div>
